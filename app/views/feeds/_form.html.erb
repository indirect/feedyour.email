<%= form_with(model: feed) do |form| %>
  <div class="mt-6 max-w-xs mx-auto">
    <%= form.label :name, "Feed name (optional)", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1 flex">
      <%= form.text_field :name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
    </div>
    <div class="mt-4 flex justify-center">
      <%= form.submit "Create feed", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %>
