#!/usr/bin/env ruby

if ARGV.empty?
  abort "Usage: #{File.basename(__FILE__)} ENVIRONMENT"
end

def find_env(name)
  case name
  when /\As/
    "staging"
  when /\Ap/
    "production"
  else
    "development"
  end
end

@dir = File.dirname(__FILE__)
@env = find_env(ARGV.first)

def env_run(*cmd)
  cmd.unshift File.join(@dir, @env)
  puts "+ #{cmd.join(' ')}"
  system cmd.join(" ")
end


if @env == "development"
  puts "you're already connected to development!"
  exit 1
else
  env_run %w[ssh console -C] << "/cnb/lifecycle/launcher /bin/bash".inspect
end
